            <Label Text="Dodaj swoje pierwsze zamÃ³wienie, aby zaczÄ…Ä‡." HorizontalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />
            <Button Text="âž• Dodaj pierwsze zamÃ³wienie" Command="{Binding AddNewOrderCommand}" BackgroundColor="{StaticResource Success}" CornerRadius="24" Padding="20,12" Margin="0,20,0,0" />
        </VerticalStackLayout>
    </Grid>
